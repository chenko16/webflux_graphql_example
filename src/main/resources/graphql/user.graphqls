input UserCreateRequest {
    login: String!,
    name: String!,
    password: String!
}

input UserUpdateRequest {
    id: ID!,
    login: String!,
    name: String!,
    password: String!
}

type User {
    id: ID!,
    login: String!,
    name: String!
}

type UserDetail {
    id: ID!,
    login: String!,
    name: String!,
    password: String!,
    roles: [Role]
}